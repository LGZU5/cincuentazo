<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      styleClass="bg-home"
      stylesheets="@styles/styles.css"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cincuentazo.controllers.GameController"
      style="-fx-padding: 5;">

    <!-- Fila superior: NPC1 -->
    <StackPane fx:id="playerTopPane">
        <VBox alignment="TOP_CENTER" spacing="8">
            <Label fx:id="playerTopName" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="NPC 1" />
            <ScrollPane fitToHeight="true" fitToWidth="true"
                        hbarPolicy="AS_NEEDED"
                        vbarPolicy="NEVER"
                        style="-fx-background-color:transparent;">
                <HBox fx:id="playerTopHand" alignment="CENTER" spacing="12" style="-fx-padding: 6;" />
            </ScrollPane>
        </VBox>
    </StackPane>

    <!-- Fila media -->
    <HBox alignment="CENTER" style="-fx-padding: 6;">

        <!-- Izquierda: NPC2 (sin Scroll; 2 columnas) -->
        <StackPane fx:id="playerLeftPane">
            <VBox alignment="TOP_CENTER" spacing="8">
                <Label fx:id="playerLeftName" style="-fx-font-weight: bold;" text="NPC 2" />
                <TilePane fx:id="playerLeftHand"
                          alignment="TOP_CENTER"
                          hgap="8" vgap="8"
                          prefColumns="2"
                          style="-fx-padding: 6;"/>
            </VBox>
        </StackPane>

        <!-- Centro: Tablero (mazo, contador, última carta) -->
        <StackPane fx:id="boardPane" HBox.hgrow="ALWAYS" maxWidth="Infinity">
            <HBox fx:id="boardContent" alignment="CENTER" spacing="24">
                <!-- Mazo (reverso) -->
                <VBox alignment="CENTER" spacing="6">
                    <Label text="mazo" />
                    <StackPane>
                        <ImageView fx:id="deckImage"
                                   fitWidth="100" fitHeight="140"
                                   preserveRatio="true"/>
                    </StackPane>
                </VBox>

                <!-- Contador -->
                <VBox alignment="CENTER" spacing="6">
                    <Label text="contador" />
                    <StackPane style="-fx-padding: 6; -fx-border-color: #333; -fx-background-color: rgba(255,255,255,0.6); -fx-border-radius:6; -fx-background-radius:6;">
                        <Label fx:id="counterLabel"
                               text="0"
                               style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-text-fill: black;" />
                    </StackPane>
                </VBox>

                <!-- Última carta jugada -->
                <VBox alignment="CENTER" spacing="6">
                    <Label text="última carta" />
                    <StackPane>
                        <ImageView fx:id="lastPlayedImage"
                                   fitWidth="100" fitHeight="140"
                                   preserveRatio="true"/>
                    </StackPane>
                </VBox>
            </HBox>
        </StackPane>

        <!-- Derecha: NPC3 (sin Scroll; 2 columnas) -->
        <StackPane fx:id="playerRightPane">
            <VBox alignment="TOP_CENTER" spacing="8">
                <Label fx:id="playerRightName" style="-fx-font-weight: bold;" text="NPC 3" />
                <TilePane fx:id="playerRightHand"
                          alignment="TOP_CENTER"
                          hgap="8" vgap="8"
                          prefColumns="2"
                          style="-fx-padding: 6;"/>
            </VBox>
        </StackPane>
    </HBox>

    <!-- Inferior: Jugador humano -->
    <StackPane fx:id="playerBottomPane">
        <VBox alignment="CENTER" spacing="8">
            <Label fx:id="playerBottomName" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="JUGADOR HUMANO" />
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="passButton" styleClass="button-quit" text="Rendirse" />
                <ScrollPane fitToHeight="true" fitToWidth="true"
                            hbarPolicy="AS_NEEDED"
                            vbarPolicy="NEVER"
                            style="-fx-background-color:transparent;">
                    <HBox fx:id="playerBottomHand" alignment="CENTER" spacing="12" style="-fx-padding: 6;" />
                </ScrollPane>
                <Button fx:id="playButton" styleClass="button-play" text="Jugar" />
            </HBox>
        </VBox>
    </StackPane>

</VBox>
