<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" styleClass="bg-home" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cincuentazo.controllers.GameController">

    <top>
        <HBox fx:id="playerTopPane" alignment="CENTER" spacing="10" style="-fx-padding: 8;">
            <VBox alignment="CENTER">
                <Label fx:id="playerTopName" alignment="CENTER" style="-fx-font-weight: bold;" text="Player Top" />
                <Label fx:id="playerTopState" style="-fx-font-size: 11px; -fx-text-fill: gray;" text="" />
            </VBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                <HBox fx:id="playerTopHand" alignment="CENTER_LEFT" spacing="6" style="-fx-padding: 6;" />
            </ScrollPane>
        </HBox>
    </top>

    <left>
        <VBox fx:id="playerLeftPane" alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 8;">
            <VBox alignment="CENTER_LEFT" spacing="4">
                <Label fx:id="playerLeftName" style="-fx-font-weight: bold;" text="Player Left" />
                <Label fx:id="playerLeftState" style="-fx-font-size: 11px; -fx-text-fill: gray;" text="" />
            </VBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <VBox fx:id="playerLeftHand" alignment="TOP_LEFT" spacing="6" style="-fx-padding: 6;" />
            </ScrollPane>
        </VBox>
    </left>

    <right>
        <VBox fx:id="playerRightPane" alignment="CENTER_RIGHT" spacing="8" style="-fx-padding: 8;">
            <VBox alignment="CENTER_RIGHT" spacing="4">
                <Label fx:id="playerRightName" style="-fx-font-weight: bold;" text="Player Right" />
                <Label fx:id="playerRightState" style="-fx-font-size: 11px; -fx-text-fill: gray;" text="" />
            </VBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <VBox fx:id="playerRightHand" alignment="TOP_RIGHT" spacing="6" style="-fx-padding: 6;" />
            </ScrollPane>
        </VBox>
    </right>

    <center>
        <StackPane fx:id="tablePane" style="-fx-padding: 16;">
            <VBox alignment="CENTER" spacing="12">
                <StackPane fx:id="discardStack" prefHeight="220" prefWidth="320" style="-fx-border-color: #333; -fx-border-radius: 6; -fx-background-color: linear-gradient(#f8f8f8, #ffffff); -fx-padding: 12;">
                    <Label fx:id="tableTopCard" style="-fx-font-size: 18px;" text="Top Card" />
                    <Label fx:id="tableSumLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: rgba(255,255,255,0.8); -fx-padding: 4; -fx-translate-y: 70;" text="Sum: 0" />
                </StackPane>
                <HBox alignment="CENTER" spacing="20">
                    <VBox alignment="CENTER" spacing="6">
                        <Label style="-fx-font-weight: bold;" text="Mazo" />
                        <ImageView fx:id="deckView" fitHeight="90" fitWidth="60" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="deckCountLabel" style="-fx-text-fill: gray;" text="x 52" />
                    </VBox>
                    <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
                    <VBox alignment="CENTER" spacing="6">
                        <Button fx:id="drawButton" minWidth="100" text="Robar" />
                        <Button fx:id="playButton" minWidth="100" text="Jugar" />
                        <Button fx:id="passButton" minWidth="100" text="Pasar" />
                    </VBox>
                </HBox>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox fx:id="playerBottomPane" alignment="CENTER" spacing="10" style="-fx-padding: 8;">
            <VBox alignment="CENTER" spacing="4">
                <Label fx:id="playerBottomName" style="-fx-font-weight: bold;" text="Player Bottom" />
                <Label fx:id="playerBottomState" style="-fx-font-size: 11px; -fx-text-fill: gray;" text="" />
            </VBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                <HBox fx:id="playerBottomHand" alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 6;" styleClass="transparent" />
            </ScrollPane>
        </HBox>
    </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</BorderPane>
